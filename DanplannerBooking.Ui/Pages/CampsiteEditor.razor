@page "/editor"
@using System.Net.Http.Json
@using DanplannerBooking.Application.Dtos
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JS

<h2>🛠 Campsite Editor</h2>
<p class="text-muted">Vælg en campingplads, placer enheder og gem layout.</p>

<div style="display:flex; gap:20px; align-items:flex-start;">

    <!-- SIDEBAR -->
    <div class="card" style="min-width:280px; max-width:350px; padding:12px;">
        <h4>Værktøjer</h4>

        <label class="form-label">Vælg campingplads</label>
        <select class="form-select mb-3"
                @bind="SelectedCampsiteId"
                @bind:after="LoadUnitsAsync">
            <option value="">-- vælg --</option>
            @foreach (var c in Campsites)
            {
                <option value="@c.Id.ToString()">@c.Name</option>
            }
        </select>

        @if (!string.IsNullOrEmpty(SelectedCampsiteId))
        {
            <div class="mb-3" style="display:grid; grid-template-columns:1fr 1fr; gap:8px;">
                <button class="btn btn-primary" @onclick="GoToCreateSpace">
                    + Ny plads
                </button>

                <button class="btn btn-primary" @onclick="GoToCreateCottage">
                    + Ny hytte
                </button>
            </div>

            <label class="form-label">Placer DB-enhed</label>
            <select class="form-select mb-2" @bind="SelectedUnitId">
                <option value="">-- vælg enhed --</option>
                @foreach (var u in DbUnits)
                {
                    <option value="@u.Id.ToString()">@u.Name (@u.Type)</option>
                }
            </select>

            <button class="btn btn-outline-primary mb-3"
                    @onclick="EnablePlacement"
                    disabled="@string.IsNullOrEmpty(SelectedUnitId)">
                Placer på kort
            </button>

            @if (Selected is not null)
            {
                <hr />
                <h4>Valgt</h4>

                <label class="form-label">Navn</label>
                <input class="form-control mb-2" @bind="Selected.Name" />

                <label class="form-label">Type</label>
                <select class="form-select mb-2" @bind="Selected.Type">
                    <option value="Space">Plads</option>
                    <option value="Cottage">Hytte</option>
                </select>

                <label class="form-label">X</label>
                <input class="form-control mb-2" type="number" @bind="Selected.X" />

                <label class="form-label">Y</label>
                <input class="form-control mb-2" type="number" @bind="Selected.Y" />

                <button class="btn btn-primary me-2" @onclick="UpdateUnit">Opdater</button>
                <button class="btn btn-danger" @onclick="DeleteUnit">Slet</button>
            }

            <hr />

            <button class="btn btn-success w-100"
                    @onclick="SaveLayout"
                    disabled="@DbUnits.Count == 0">
                Gem layout
            </button>
        }
        else
        {
            <p class="text-muted mt-3">Vælg en campingplads for at se og redigere enheder.</p>
        }
    </div>

    <!-- KORTET -->
    <div class="map-container"
         id="campsiteEditorMap"
         style="border:1px solid #888; width:800px; height:600px; position:relative;">
        <svg id="editorSvg" width="800" height="600">
        </svg>
    </div>
</div>

@code {
    // Muterbar VM (ingen init-only problemer)
    public class UnitVm
    {
        public Guid Id { get; set; }
        public string Name { get; set; } = "";
        public string Type { get; set; } = ""; // "Space" | "Cottage"
        public int X { get; set; }
        public int Y { get; set; }
    }

    private List<CampsiteDto> Campsites = new();
    private string? SelectedCampsiteId;

    private List<UnitVm> DbUnits = new();
    private UnitVm? Selected;

    private string? SelectedUnitId;

    protected override async Task OnInitializedAsync()
    {
        Campsites =
            await Http.GetFromJsonAsync<List<CampsiteDto>>("api/campsites")
            ?? new();
    }

    // Kaldt automatisk efter @bind på dropdown
    private async Task LoadUnitsAsync()
    {
        Selected = null;
        DbUnits.Clear();
        SelectedUnitId = null;

        if (string.IsNullOrEmpty(SelectedCampsiteId))
            return;

        var url = $"api/units?campsiteId={SelectedCampsiteId}";
        var data = await Http.GetFromJsonAsync<List<UnitDto>>(url) ?? new();

        DbUnits = data
            .Select(u => new UnitVm
            {
                Id = u.Id,
                Name = u.Name,
                Type = u.Type,
                X = u.X,
                Y = u.Y
            })
            .ToList();

        await JS.InvokeVoidAsync("EditorMap.loadUnits", "#editorSvg", DbUnits);
    }

    private void EnablePlacement()
    {
        if (string.IsNullOrEmpty(SelectedUnitId))
            return;

        var unit = DbUnits.FirstOrDefault(u => u.Id.ToString() == SelectedUnitId);
        if (unit is null)
            return;

        Selected = unit;
        JS.InvokeVoidAsync("EditorMap.enablePlacementMode", Selected.Id.ToString());
    }

    private async Task UpdateUnit()
    {
        if (Selected is null)
            return;

        var dto = new UnitDto
        {
            Id = Selected.Id,
            Name = Selected.Name,
            Type = Selected.Type,
            X = Selected.X,
            Y = Selected.Y
            // ingen CampsiteId her, hvis UnitDto ikke har det
        };

        await Http.PutAsJsonAsync($"api/units/{Selected.Id}", dto);
        await LoadUnitsAsync();
    }

    private async Task DeleteUnit()
    {
        if (Selected is null)
            return;

        await Http.DeleteAsync($"api/units/{Selected.Id}");
        Selected = null;
        await LoadUnitsAsync();
    }

    private async Task SaveLayout()
    {
        // tilpas endpoint hvis du ikke har save-layout endnu
        await Http.PostAsJsonAsync("api/units/save-layout", DbUnits);
    }

    // Hjælpemetoder – løser CS1503 (method group -> Action)
    private void GoToCreateSpace() => Navigation.NavigateTo("/create-space");
    private void GoToCreateCottage() => Navigation.NavigateTo("/create-cottage");
}
