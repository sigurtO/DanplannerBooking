@page "/cottage/{cottageId:guid}"
@using DanplannerBooking.Application.Dtos.Cottage
@inject HttpClient Http
@inject NavigationManager NavigationManager

<h3>Cottage Details</h3>

@if (cottage == null)
{
    <p>Loading cottage...</p>
}
else
{
    <div class="card mb-4 shadow-sm">
        <div class="row g-0">
            <div class="col-md-5">
                @if (cottage.Image != null && cottage.Image.Length > 0)
                {
                    <img class="card-img-top"
                         src="@($"data:image/png;base64,{Convert.ToBase64String(cottage.Image)}")"
                         alt="Cottage Image"
                         style="height:200px; object-fit:cover;" />
                }
                else
                {
                    <div class="card-img-top text-center p-5 bg-light text-muted">
                        No Image
                    </div>
                }
            </div>
            <div class="col-md-7">
                <div class="card-body">
                    <h4 class="card-title">@cottage.Name</h4>
                    <p class="card-text">
                        <strong>Location:</strong> @cottage.Location<br />
                        <strong>Description:</strong> @cottage.Description<br />
                        <strong>Price:</strong> @cottage.PricePerNight.ToString("C")<br />
                        <strong>Status:</strong> @(cottage.IsAvailable ? "✅ Available" : "❌ Unavailable")<br />
                        <strong>Features:</strong><br />
                        🚽 Toilet: @(cottage.HasToilet ? "Yes" : "No")<br />
                        🚿 Shower: @(cottage.HasShower ? "Yes" : "No")<br />
                        🍳 Kitchen: @(cottage.HasKitchen ? "Yes" : "No")<br />
                        🔥 Heating: @(cottage.HasHeating ? "Yes" : "No")<br />
                        📶 WiFi: @(cottage.HasWiFi ? "Yes" : "No")
                    </p>

                    <!-- User booking -->
                    <button class="btn btn-success" @onclick="NavigateToBooking">Book Now</button>
                    <p class="mt-2 text-muted">Free cancellation up to 48 hours before check-in</p>

                    <!-- Admin actions -->
                    <div class="mt-3">
                        <button class="btn btn-warning btn-sm" @onclick="EditCottage">Update</button>
                        <button class="btn btn-danger btn-sm" @onclick="DeleteCottage">Delete</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (editCottage != null)
{
    <h4>Edit Cottage</h4>

    @if (!string.IsNullOrWhiteSpace(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @errorMessage
            <button type="button" class="btn-close" @onclick="ClearError" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrWhiteSpace(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @successMessage
            <button type="button" class="btn-close" @onclick="ClearSuccess" aria-label="Close"></button>
        </div>
    }

    <EditForm Model="@editCottage" OnValidSubmit="HandleUpdate">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div>
            <label>Name:</label>
            <InputText @bind-Value="editCottage.Name" class="form-control" />
        </div>

        <div>
            <label>Location:</label>
            <InputText @bind-Value="editCottage.Location" class="form-control" />
        </div>

        <div>
            <label>Description:</label>
            <InputText @bind-Value="editCottage.Description" class="form-control" />
        </div>

        <div>
            <label>Price Per Night:</label>
            <InputNumber @bind-Value="editCottage.PricePerNight" class="form-control" />
        </div>

        <div class="form-check">
            <InputCheckbox @bind-Value="editCottage.IsAvailable" class="form-check-input" />
            <label class="form-check-label">Available</label>
        </div>

        <div class="form-check">
            <InputCheckbox @bind-Value="editCottage.HasToilet" class="form-check-input" />
            <label class="form-check-label">Has Toilet</label>
        </div>

        <div class="form-check">
            <InputCheckbox @bind-Value="editCottage.HasShower" class="form-check-input" />
            <label class="form-check-label">Has Shower</label>
        </div>

        <div class="form-check">
            <InputCheckbox @bind-Value="editCottage.HasKitchen" class="form-check-input" />
            <label class="form-check-label">Has Kitchen</label>
        </div>

        <div class="form-check">
            <InputCheckbox @bind-Value="editCottage.HasHeating" class="form-check-input" />
            <label class="form-check-label">Has Heating</label>
        </div>

        <div class="form-check">
            <InputCheckbox @bind-Value="editCottage.HasWiFi" class="form-check-input" />
            <label class="form-check-label">Has WiFi</label>
        </div>

        <div>
            <ImageUpload Label="Cottage Image"
                         InputId="cottageimage"
                         OnImageSelected="HandleCottageImage" />
        </div>

        <button type="submit" class="btn btn-success">Save Changes</button>
        <button class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
    </EditForm>
}

@code {
    [Parameter] public Guid cottageId { get; set; }
    private CottageResponseDto? cottage;
    private CottageUpdateDto? editCottage;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        cottage = await Http.GetFromJsonAsync<CottageResponseDto>($"api/cottage/{cottageId}");
    }

    private void NavigateToBooking()
    {
        NavigationManager.NavigateTo($"/book-cottage/{cottageId}");
    }

    private void EditCottage()
    {
        if (cottage == null) return;

        // Clear any previous messages
        ClearError();
        ClearSuccess();

        editCottage = new CottageUpdateDto
        {
            CampsiteId = cottage.CampsiteId,
            Name = cottage.Name,
            Location = cottage.Location,
            Description = cottage.Description,
            HasToilet = cottage.HasToilet,
            HasShower = cottage.HasShower,
            HasKitchen = cottage.HasKitchen,
            HasHeating = cottage.HasHeating,
            HasWiFi = cottage.HasWiFi,
            IsAvailable = cottage.IsAvailable,
            PricePerNight = cottage.PricePerNight,
            Image = cottage.Image,
            RowVersion = cottage.RowVersion
        };
    }

    private async Task HandleUpdate()
    {
        if (editCottage == null) return;

        // Clear any previous messages
        ClearError();
        ClearSuccess();

        var response = await Http.PutAsJsonAsync($"api/cottage/{cottageId}", editCottage);
        
        if (response.IsSuccessStatusCode)
        {
            // Refresh cottage details to get the latest data
            cottage = await Http.GetFromJsonAsync<CottageResponseDto>($"api/cottage/{cottageId}");
            successMessage = "Cottage updated successfully!";
            editCottage = null;
        }
        else if (response.StatusCode == System.Net.HttpStatusCode.Conflict)
        {
            // Handle concurrency conflict (409)
            var errorDetails = await response.Content.ReadAsStringAsync();
            errorMessage = "⚠️ Concurrency Conflict: This cottage has been modified by another user. Please reload the page to see the latest changes and try again.";
            
            // Reload the cottage data to show current state
            cottage = await Http.GetFromJsonAsync<CottageResponseDto>($"api/cottage/{cottageId}");
            editCottage = null; // Close the edit form
        }
        else if (response.StatusCode == System.Net.HttpStatusCode.NotFound)
        {
            errorMessage = "❌ Cottage not found. It may have been deleted.";
        }
        else
        {
            // Handle other errors
            var errorDetails = await response.Content.ReadAsStringAsync();
            errorMessage = $"❌ Update failed ({(int)response.StatusCode}): {errorDetails}";
        }
    }

    private async Task DeleteCottage()
    {
        var response = await Http.DeleteAsync($"api/cottage/{cottageId}");
        if (response.IsSuccessStatusCode)
        {
            // Show a message 
            NavigationManager.NavigateTo("/allCottages");
        }
        else
        {
            var errorDetails = await response.Content.ReadAsStringAsync();
            errorMessage = $"❌ Delete failed ({(int)response.StatusCode}): {errorDetails}";
        }
    }

    private void CancelEdit()
    {
        editCottage = null;
        ClearError();
        ClearSuccess();
    }

    private void HandleCottageImage(byte[] imageBytes)
    {
        if (editCottage != null)
        {
            editCottage.Image = imageBytes;
        }
    }

    private void ClearError()
    {
        errorMessage = null;
    }

    private void ClearSuccess()
    {
        successMessage = null;
    }
}
