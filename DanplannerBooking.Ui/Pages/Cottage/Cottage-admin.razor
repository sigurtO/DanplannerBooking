@page "/cottages-admin"
@using DanplannerBooking.Application.Dtos.Cottage

<h3>All Cottages</h3>

@if (cottages == null)
{
    <p>Loading cottages...</p>
}
else if (cottages.Count == 0)
{
    <p>No cottages found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Description</th>
                <th>Price/Night</th>
                <th>Availability</th>
                <th>Features</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cottage in cottages)
            {
                <tr>
                    <td>@cottage.Name</td>
                    <td>@cottage.Location</td>
                    <td>@cottage.Description</td>
                    <td>@cottage.PricePerNight.ToString("C")</td>
                    <td>@(cottage.IsAvailable ? "✅ Available" : "❌ Unavailable")</td>
                    <td>
                        🚽 Toilet: @(cottage.HasToilet ? "Yes" : "No")<br />
                        🚿 Shower: @(cottage.HasShower ? "Yes" : "No")<br />
                        🍳 Kitchen: @(cottage.HasKitchen ? "Yes" : "No")<br />
                        🔥 Heating: @(cottage.HasHeating ? "Yes" : "No")<br />
                        📶 WiFi: @(cottage.HasWiFi ? "Yes" : "No")
                    </td>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(cottage.ImageUrl))
                        {
                            <img src="@cottage.ImageUrl" alt="cottage image" width="100" />
                        }
                    </td>
                    <td>
                        <button class="btn btn-warning btn-sm" @onclick="() => EditCottage(cottage)">Update</button>
                        <button class="btn btn-danger btn-sm" @onclick="() => DeleteCottage(cottage.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (editCottage != null)
{
    <h4>Edit Cottage</h4>
    <EditForm Model="@editCottage" OnValidSubmit="HandleUpdate">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div>
            <label>Name:</label>
            <InputText @bind-Value="editCottage.Name" class="form-control" />
        </div>

        <div>
            <label>Location:</label>
            <InputText @bind-Value="editCottage.Location" class="form-control" />
        </div>

        <div>
            <label>Description:</label>
            <InputText @bind-Value="editCottage.Description" class="form-control" />
        </div>

        <div>
            <label>Price Per Night:</label>
            <InputNumber @bind-Value="editCottage.PricePerNight" class="form-control" />
        </div>

        <div class="form-check">
            <InputCheckbox @bind-Value="editCottage.IsAvailable" class="form-check-input" />
            <label class="form-check-label">Available</label>
        </div>

        <div class="form-check">
            <InputCheckbox @bind-Value="editCottage.HasToilet" class="form-check-input" />
            <label class="form-check-label">Has Toilet</label>
        </div>

        <div class="form-check">
            <InputCheckbox @bind-Value="editCottage.HasShower" class="form-check-input" />
            <label class="form-check-label">Has Shower</label>
        </div>

        <div class="form-check">
            <InputCheckbox @bind-Value="editCottage.HasKitchen" class="form-check-input" />
            <label class="form-check-label">Has Kitchen</label>
        </div>

        <div class="form-check">
            <InputCheckbox @bind-Value="editCottage.HasHeating" class="form-check-input" />
            <label class="form-check-label">Has Heating</label>
        </div>

        <div class="form-check">
            <InputCheckbox @bind-Value="editCottage.HasWiFi" class="form-check-input" />
            <label class="form-check-label">Has WiFi</label>
        </div>

        <div>
            <label>Image URL:</label>
            <InputText @bind-Value="editCottage.ImageUrl" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Save Changes</button>
        <button class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
    </EditForm>
}

@code {
    private List<CottageResponseDto> cottages;
    private CottageDto editCottage;
    private Guid editingCottageId;

    protected override async Task OnInitializedAsync()
    {
        cottages = await Http.GetFromJsonAsync<List<CottageResponseDto>>("api/cottage");
    }

    private async Task DeleteCottage(Guid cottageId)
    {
        var response = await Http.DeleteAsync($"api/cottage/{cottageId}");
        if (response.IsSuccessStatusCode)
        {
            cottages = cottages.Where(c => c.Id != cottageId).ToList();
        }
    }

    private void EditCottage(CottageResponseDto cottage)
    {
        editingCottageId = cottage.Id;
        editCottage = new CottageDto
        {
            CampsiteId = cottage.CampsiteId,
            Name = cottage.Name,
            Location = cottage.Location,
            Description = cottage.Description,
            HasToilet = cottage.HasToilet,
            HasShower = cottage.HasShower,
            HasKitchen = cottage.HasKitchen,
            HasHeating = cottage.HasHeating,
            HasWiFi = cottage.HasWiFi,
            IsAvailable = cottage.IsAvailable,
            PricePerNight = cottage.PricePerNight,
            ImageUrl = cottage.ImageUrl
        };
    }

    private async Task HandleUpdate()
    {
        var response = await Http.PutAsJsonAsync($"api/cottage/{editingCottageId}", editCottage);
        if (response.IsSuccessStatusCode)
        {
            var index = cottages.FindIndex(c => c.Id == editingCottageId);
            if (index != -1)
            {
                cottages[index] = new CottageResponseDto(
                    editingCottageId,
                    editCottage.CampsiteId,
                    cottages[index].Campsite,
                    editCottage.Name,
                    editCottage.Location,
                    editCottage.Description,
                    editCottage.HasToilet,
                    editCottage.HasShower,
                    editCottage.HasKitchen,
                    editCottage.HasHeating,
                    editCottage.HasWiFi,
                    editCottage.IsAvailable,
                    editCottage.PricePerNight,
                    editCottage.ImageUrl
                );
            }
            editCottage = null;
        }
    }

    private void CancelEdit()
    {
        editCottage = null;
    }
}
